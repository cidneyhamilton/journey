<fieldset>
  <legend>Personal Information</legend>
  <ol>
    <li>
      <label for="firstname" class="required">First name:</label>
      <%= text_field "person", "firstname" %>
    </li>
    <li>
      <label for="lastname" class="required">Last name:</label>
      <%= text_field "person", "lastname" %>
    </li>
    <li>
      <label for="nickname">Nickname:</label>
      <%= text_field "person", "nickname" %>
    </li>
    <li>
      <label for="birthdate">Date of birth:</label>
      <%= date_select "person", "birthdate", :include_blank => true, :start_year => Date.today.year, :end_year => 1900, :order => [:month, :day, :year] %>
    </li>
    <li>
      <label for="gender" class="required">Gender:</label>
      <%= select "person", "gender", ["male", "female"] %>
    </li>
    <li>
      <label for="phone">Phone:</label>
      <%= text_field "person", "phone" %>
    </li>
    <li>
      <label for="best_call_time">Best Time to Call:</label>
      <%= text_field "person", "best_call_time" %>
    </li>
  </ol>
</fieldset>