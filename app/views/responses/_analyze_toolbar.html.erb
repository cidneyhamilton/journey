<%= javascript_include_tag "layout.js" %>

<h1>Responses for "<%= @questionnaire.title %>"</h1>

<ul class="tabstrip">
	<li id="view_tab" class="<%= link_tab_class 'responses' %>">
		<%= link_to "View", questionnaire_responses_path(@questionnaire) %>
	</li>
	<li id="aggregate_tab" class="<%= link_tab_class 'aggregate' %>">
		<%= link_to "Aggregate", questionnaire_responses_path(@questionnaire) + "/aggregate" %>
	</li>
	<li id="print_tab" class="link">
		<%= link_to "Print", :controller => 'print', :action => 'responses', :id => params[:id] %>
	</li>
  <li id="export_tab">
    <%= link_to_function "Export", "selectTab('export');"%>
  </li>
</ul>

<div id="export" style="display: none;" class="tabpage">
	<p><b>Export to a spreadsheet</b></p>
	<%= link_to "One response per row", formatted_questionnaire_responses_path(@questionnaire, "csv") %><br/>
	<%= link_to "One response per column", formatted_questionnaire_responses_path(@questionnaire, "csv", :rotate => true) %>
</div>

<div style="border-top: 1px black solid;">
</div>