<%= render :partial => 'analyze_toolbar' %>
<%= javascript_include_tag polymorphic_url([:responseviewer, @questionnaire, :responses], format: :js) %>

<div id="responseviewer" style="display: none; position: absolute; z-index: 1000; background-color: #fff;">
  <%= render :partial => "response_viewer" %>
</div>

<%= render :partial => 'response_table' %>

<% if @responses.length == 0 -%>
	<p><i>No responses found.</i><p>
<% end -%>

<% if params[:view_response_id].to_i != 0 -%>
<script type="text/javascript">
document.observe("dom:loaded", function() {
  showResponse(<%= params[:view_response_id].to_i %>);
});
</script>
<% end -%>