<%= start_question @question %>
<% if @editing -%>
	<%= check_box_tag "question[#{@question.id}][default_answer]", "checked",
                (@question.default_answer and @question.default_answer != ''),
		:onChange => "updateDefault(#{@question.id}, this.checked ? 'checked' : '');"%>
<% else -%>
  <%= hidden_field_tag "question[#{@question.id}]", 0 %>
	<%= check_box_tag "question[#{@question.id}]", 'checked', (value.present? && value.to_s != 'false') %>
<% end -%>
<%= end_question @question %>