<div id="responsecontainer<%=@resp.id%>" class="responsecontainer">
    <div class="responseheader" id="responseheader">
    	<table width="100%">
    		<tr>
    			<td align="left">
    				Editing <%=@resp.title%>
    			</td>
    			<td align="right">
    			  <span id="response_toolbar">
                            <%= button_to_function "Save", 'saveEditedResponse();' %>
    			    <%= button_to_function "Cancel", 'showResponse(showingResponseId);' %>
    			  </span>
    			</td>
    		</tr>
    	</table>
    </div>
    <% form_tag({ :action => 'update_response', :id => @resp.id }, { :id => 'edited_response' }) do |f| %>
      <%= render :partial => 'response', :locals => { :resp => @resp } %>
    <% end %>
</div>