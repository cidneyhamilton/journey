#login_container {
	position: absolute; 
	margin-left: -181.5px; 
	left: 50%; 
	margin-top: 50px; 
	top: 20%; 
	width: 363px;
}

#login_container .login_content {
	border: 2px #bad032 solid; 
	border-radius: 5px;
	-moz-border-radius: 5px;
	-webkit-border-radius: 5px;
	background-image: url(<%= image_path("topbar-bg.png") %>);
	background-position: bottom;
	background-repeat: repeat-x;
	padding: 2em;
	padding-bottom: 1em;
}

#other_login_options {
	list-style-type: none;
	padding-left: 1.5em;
	margin-left: 0;
}

#other_login_options li {
	margin: 3px;
	display: -moz-inline-block;
	display: inline-block;
}

#other_login_options li a {
	text-decoration: none;
	padding: 5px;
	background-color: #bad032;
	color: #000;
	border-radius: 5px;
	-moz-border-radius: 5px;
	-webkit-border-radius: 5px;
	display: -moz-inline-block;
	display: inline-block;
}

#other_login_options li a:hover {
	background-color: #fff;
}