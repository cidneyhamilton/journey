<% if @editing and person_signed_in? and logged_in_person.permitted?(@question.questionnaire, "edit_answers") -%>
  <%= text_area_tag "answer[#{@question.id}]", value, :rows => 4 %>
<% else -%>
  <% if person_signed_in? and logged_in_person.permitted?(@question.questionnaire, "view_answers") -%>
    <%= simple_format value %>
  <% end -%>
<% end -%>
