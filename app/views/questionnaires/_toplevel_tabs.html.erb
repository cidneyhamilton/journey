<ul class="tabstrip">
	<%= tabstrip_li "Survey", @questionnaire, :controller => 'questionnaires', :except => ['publish'] %>
	<% if logged_in? and logged_in_person.permitted?(@questionnaire, "edit") -%>
	   <%= tabstrip_li "Publish", questionnaire_path(@questionnaire) + '/publish', 
                        :controller => 'questionnaires', :only => ['publish'] %>
	<% end -%>
	<% if logged_in? and logged_in_person.permitted?(@questionnaire, "view_answers") -%>
	   <%= tabstrip_li "Responses", responses_path(@questionnaire), :controller => 'responses' %>
	<% end -%>
	<%= tabstrip_li "Answer", { :controller => "answer", :action => "index", :id => @questionnaire.id },
                    :class => "external", :disabled => (not @questionnaire.is_open) %>
</ul>
