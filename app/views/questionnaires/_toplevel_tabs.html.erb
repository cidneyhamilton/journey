<ul class="tabstrip">
	<li id="survey_tab" class="<%= toplevel_link_tab_class 'questionnaires', :except => ['publish'] %>">
		<%= link_to "Survey", @questionnaire %>
	</li>
	<% if logged_in? and logged_in_person.permitted?(@questionnaire, "edit") -%>
  	<li id="publish_tab" class="<%= toplevel_link_tab_class 'questionnaires', :only => ['publish'] %>">
  		<%= link_to "Publish", questionnaire_path(@questionnaire) + '/publish' %>
  	</li>
	<% end -%>
	<% if logged_in? and logged_in_person.permitted?(@questionnaire, "view_responses") -%>
	  <li id="responses_tab" class="<%= toplevel_link_tab_class 'responses' %>">
		  <%= link_to "Responses", responses_path(@questionnaire) %>
	  </li>
	<% end -%>
	<% if @questionnaire.is_open -%>
		<li id="answer_tab" class="<%= link_tab_class 'answer' %>">
			<%= link_to "Answer", :controller => "answer", :action => "index", :id => @questionnaire.id %>
		</li>
	<% end -%>
</ul>
