<% authors = questionnaire.authors.collect(&:name).join(", ") -%>
<li class="questionnairesummary">  
  <div id="questionnairesummary_<%=questionnaire.id%>">
    <table style="width: 100%;">
      <td style="width: 50%; overflow: hidden;">
<% if person_signed_in? and QuestionnairePermission::ACTIONS.any? { |p| current_person.can?(p, questionnaire) } -%>
        	<b><%= link_to questionnaire.title, questionnaire %></b>
<% else -%>
  <b><%=h questionnaire.title%></b>
(<%= link_to "Answer", :controller => "answer", :action => "index", :id => questionnaire.id -%>)
<% end -%>
      </td>
      <td style="width: 20%; overflow: hidden;">
        <% if questionnaire.tags.length > 0 %>
          Tags:
          <span style="font-size: 90%; font-weight: bold;">
           <%= tag_links questionnaire %>
          </span>
        <% end -%>
      </td>
      <td style="width: 30%; overflow: hidden;">
        <%= h authors %>
      </td>
    </table>
  </div>
</li>