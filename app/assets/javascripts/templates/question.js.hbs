<span class="draghandle" title="Drag to change question order"></span>

<span class="questionandcaption">
  {{#unless view.editMode}}
    <div class="edit-mode-overlay" {{action toggleEditMode target="view"}}>
      <p>Click to edit</p>
    </div>
  {{/unless}}
  
  <label {{bind-attr class=":caption required:required" for="view.answerField.elementId"}}>
    {{caption}}
  </label>
  <span class="questionbody">
    {{#if hasPurpose}}
      <span class="special_purpose">
        <span class="icon icon-set-special-purpose"></span>
        {{purpose}}
      </span>
    {{/if}}
  
    {{view QuestionnaireEdit.QuestionBodyView contentBinding="this" editModeBinding="view.editMode"}}
      
  </span>
</span>

{{#if view.editMode}}
  <div class="edit-controls">
    <a class="close" {{action toggleEditMode target="view"}}>x</a>
    
    <form>
      <label>
        Caption
        {{input type="text" value=caption}}
      </label>
      <label>
        {{input type="checkbox" checked=required}}
        Required
      </label>
      <label>
        Default answer
        {{input type="text" value=defaultAnswer}}
      </label>
    </form>
    
    <ul>
      {{partial "question_options"}}
    </ul>
  </div>
{{/if}}