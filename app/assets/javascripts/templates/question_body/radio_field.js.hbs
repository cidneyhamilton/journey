<ul {{bind-attr class=":radio-field view.radioLayoutClass"}}>
  {{#each questionOption in view.content.questionOptions}}
    <li>
      <label>
        {{view QuestionnaireEdit.RadioButtonView valueBinding="questionOption.option" targetBinding="view.content.defaultAnswer"}}
        {{questionOption.option}}
      </label>
      <span class="radiospacer">&nbsp;</span>
    </li>
  {{/each}}
</ul>